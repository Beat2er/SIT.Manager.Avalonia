<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:labs="using:Avalonia.Labs.Controls"
			 xmlns:sty="using:FluentAvalonia.Styling"
             x:Class="SIT.Manager.Avalonia.App"
             RequestedThemeVariant="Dark">
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceInclude Source="avares://SIT.Manager.Avalonia/Localization/en-US.axaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>
	
    <Application.Styles>
		<sty:FluentAvaloniaTheme CustomAccentColor="#FF7F7F7F"/>
		<labs:ControlThemes/>
		<StyleInclude Source="avares://SIT.Manager.Avalonia/Assets/Styles/Theme.axaml"/>
    </Application.Styles>
</Application>
